<div class="notes">
	<% if @user.notes.present? %>
	<h2><p class="text-center">Your Notes</p></h2>
		<table class="table table-bordered">
			<tr>
				<th>Class Name</th>
				<th>Topic</th>
				<th>Date</th>
				<th colspan="3">Note</th>
			</tr>
		<% @user.notes.each do |note| %>
			<tr>
				<td>
					<%= note.c_name %>
				</td>
				<td>
					<%= note.topic %>
				</td>
				<td>
					<%= note.get_filedate %>
				</td>
				<td>
					<%= link_to 'View', note.content.url %>
				</td>
				<td>
					<%= link_to 'Edit', edit_user_note_path(note.user, note) %>
				</td>
				<td>
					<%= link_to 'Delete', [note.user, note],
		               method: :delete,
		               data: { confirm: 'Are you sure?' } %>
		        </td>
			</tr>
		<% end %>
		</table>
	<% end %>
</div>

<%= render 'notes/new' %>