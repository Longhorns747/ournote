<div class="notes">
	<% if @user.notes.present? %>
	<h2><p class="text-center">Your Notes</p></h2>
		<table class="table table-bordered">
			<tr>
				<th>Class Name</th>
				<th>Topics</th>
				<th>Date</th>
				<th colspan="3">Files</th>
			</tr>
		<% @user.notes.each do |note| %>
			<tr>
				<td>
					<%= note.c_name %>
				</td>

				<td>
					<% note.topics.each do |topic| %>
						| <%= topic.topic %>
					<% end %>
					|
				</td>

				<td>
					<% note.note_contents.each do |note_content| %>
						| <%= note_content.get_filedate %>
					<% end %>
					|
				</td>

				<td>
					<% note.note_contents.each do |note_content| %>
						| <%= link_to note_content.content_file_name, note_content.content.url %>
					<% end %>
					|
				</td>

				<td>
					<%= link_to 'Edit', edit_user_note_path(note.user, note) %>
				</td>
				<td>
					<%= link_to 'Delete', [note.user, note],
		               method: :delete,
		               data: { confirm: 'Are you sure?' } %>
		        </td>
			</tr>
		<% end %>
		</table>
	<% end %>
</div>

<%= render 'notes/new' %>