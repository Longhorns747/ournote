<table class="table table-bordered table-hover">
	<tr>
		<th>Class Name</th>
		<th>Topics</th>
		<th>Date</th>
		<th colspan="3">Files</th>
	</tr>

	<% @user.notes.each do |note| %>
		<tr>
			<%= render 'notes/show', :note => note %>

			<td>
				<%= link_to 'Edit', edit_user_note_path(note.user, note) %>
			</td>
			
			<td>
				<%= link_to 'Delete', [note.user, note],
		           method: :delete,
		           data: { confirm: 'Are you sure?' } %>
	    	</td>
	    </tr>
	<% end %>
</table>